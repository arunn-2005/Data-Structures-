#include <bits/stdc++.h> 
using namespace std; 
 int maxsubarrint arr[],int n) 
{ 
 int maxi =0; 
 for (int i=0;i<n-1;i++){ 
 int ct =1,j; 
 for (j=i;j<n;j++){ 
 if (arr[j+1]==arr[j]+1){ 
                ct++;} 
 else{break;}} 
 maxi = max(maxi, ct); 
        i = j;} 
 return maxi;} 
 int main() 
{ 
    int n = 11; 
    int arr[] = { 1, 3, 4, 7, 8, 4, 
                  2, 9, 5, 6, 12 }; 
 cout << maxsubarrarr, n); 
    return 0;}
